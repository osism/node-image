  version: 1

  ssh:
    allow-pw: true
    install-server: true

  identity:
    hostname: osism
    password: "$5$H2wkOHUVMIm2Yl2n$2AR/A2ILtgZcWx5UXL6N56Ha/wkdGvs0w5sFUMQ3iaB"
    username: ubuntu

  network:
    network:
      version: 2
      ethernets:
        alleths:
          match:
            name: en*
          dhcp4: true
          optional: true

  storage:
    config: !include include.d/disk-layout.yml

  late-commands:
    - echo osism-$(openssl rand -hex 3) > /target/etc/hostname
